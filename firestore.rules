rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Shops collection
    match /shops/{shopId} {
      allow read: if true; // anyone can see shops
      allow write: if request.auth != null && request.auth.uid == resource.data.owner_id;
    }

    // Messages collection (for chat)
    match /messages/{messageId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.senderId;
      allow update, delete: if false; // nobody can edit or delete messages
    }

    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
